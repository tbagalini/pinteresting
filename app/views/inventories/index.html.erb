<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
    <img src="http://d3fwmhwfh9c00r.cloudfront.net/logonew1.png" width="300" height="50" class="img-responsive" alt="TurboLogo" />


<h1>Inventory</h1>

<br>

        <%= form_tag search_path, method: :get do %>
             <div class="field">
               
               <%= text_field_tag :part_number, params[:part_number], placeholder: "enter part number" %>
              <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
              <%= link_to 'Clear', search_path, class: 'btn btn-danger' %>
            </div>
        <% end %>

    <% unless @inventories.blank? %>
    
</div>
</div> 
<div class="table-responsive">    
<table class="table table-hover">

  <thead>
    <tr>
      <th>Company Name</th>
      <th>Part number</th>
      <th>Alt</th>
      <th>Description</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Cond code</th>
      <th>Part comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.user.company_name %> </td>
        <td><%= inventory.part_number %></td>
        <td><%= inventory.alternate_part_number %></td>
        <td><%= inventory.description %></td>
        <td><%= inventory.qty %></td>
        <td><%= inventory.price %></td>
        <td><%= inventory.condition_code %></td>
        <td><%= inventory.part_comments %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-info-sign"></i>'.html_safe, inventory, class: 'btn btn-default' %></td>
        <% if inventory.user == current_user %>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_inventory_path(inventory), class: 'btn btn-default' %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, inventory, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div> 
<% end %>

    
<br>
  <div class="panel-footer">
 <br>
</div>

